if(minutesWarning.slice("=", ",").length > 1){
    minutesWarning = pairs[2].substr(pairs[2].length-2).toString();
}

    //the type is converted to an int for comparing and output
    var minutesWarningInt = parseInt(minutesWarning);




document.getElementById("summary").innerHTML = "Number of Stations in this exam is " + stations +
